<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/singleTurnLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/firstBall"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/empty_circle_golden" />
        <ImageView
            android:id="@+id/secondBall"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/empty_circle_golden"/>
        <ImageView
            android:id="@+id/thirdBall"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/empty_circle_golden"/>
        <ImageView
            android:id="@+id/fourthBall"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/empty_circle_golden"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/firstScorePin"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/empty_circle_golden"/>
            <ImageView
                android:id="@+id/thirdScorePin"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/empty_circle_golden"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/secondScorePin"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/empty_circle_golden"/>
            <ImageView
                android:id="@+id/fourthScorePin"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/empty_circle_golden"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>