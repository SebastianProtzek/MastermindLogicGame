<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="protzek.sebastian.mastermindlogicgame">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/empty_circle_golden"
        android:label="@string/app_name"
        android:roundIcon="@drawable/empty_circle_golden"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".mainmenu.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gameboard.GameBoardActivity"
            android:parentActivityName=".mainmenu.MainActivity" />
        <activity
            android:name=".mainmenu.options.OptionsActivity"
            android:parentActivityName=".mainmenu.MainActivity" />
        <activity
            android:name=".mainmenu.CreditsActivity"
            android:parentActivityName=".mainmenu.MainActivity" />
        <activity
            android:name=".mainmenu.howtoplay.HowToPlayActivity"
            android:parentActivityName=".mainmenu.MainActivity" />
        <activity
            android:name=".mainmenu.highscores.HighScoresActivity"
            android:parentActivityName=".mainmenu.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>